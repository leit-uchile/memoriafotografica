{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django Debug Single Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "test",
        "`echo -n ${relativeFileDirname} | tr / .`.${fileBasenameNoExtension}"
      ],
      "django": true
    },
    {
      "name": "Run Django",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "/app",
          "remoteRoot": "/app"
        }
      ],
      "port": 5678,
      "host": "127.0.0.1",
      "justMyCode": false
    }
  ]
}
